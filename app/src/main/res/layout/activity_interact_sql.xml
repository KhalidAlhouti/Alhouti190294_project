<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.InteractSql">


    <Button
        android:onClick="onclickShowAllUsers"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Show All Records from SQLite "
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:onClick="onClickInserData"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Insert Data To SQLite "
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:onClick="onClickUpdateDelete"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Update/Delete Data From  SQLite "
        android:backgroundTint="@color/teal_700"
        />


</LinearLayout>